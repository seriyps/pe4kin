%% -*- mode: erlang -*-

{erl_opts, [debug_info]}.

%% rebar3 format
%% {deps, [{cowboy, "1.0.4"},
%%         {hackney, "1.6.0"},
%%         {jiffy, "0.14.7"}]}.
{deps, [{cowboy, ".*", {git, "https://github.com/extend/cowboy.git", {tag, "1.0.4"}}},
        {hackney, ".*", {git, "https://github.com/benoitc/hackney.git", {tag, "1.6.0"}}},
        {jiffy, ".*", {git, "https://github.com/davisp/jiffy.git", "0.14.7"}}]}.

{overrides,
 [{override, jiffy,
   [
    {plugins, [pc]},
    {artifacts, ["priv/jiffy.so"]},
    {provider_hooks,
     [
      {post,
       [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
       ]
      }]
    }
   ]}
 ]}.
